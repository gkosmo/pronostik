<div id="search-engine" class="text-right">

  <div id="search-and-btn-display">

        <%= form_tag questions_path, method: "get" do %>

   <!-- <input-field-for tags> -->
   <%= text_field_tag(:search_term, @search, placeholder: "topic?") %>
   <!-- <category-dropdown> -->
   <%= collection_select nil, :category, Category.all, :id, :title, prompt: "All categories", selected: params[:category] %>
   <!-- <button> -->
   <%= submit_tag("Search", class: 'btn btn-default btn-lg', id: "search-btn") %>
  <% end %>
 </div>
</div>
